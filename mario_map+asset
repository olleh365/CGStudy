#include <GL/glut.h>

void DrawRandbox(float x,float y) {

    //원점
    //좌측 노란 블럭
    glColor3f(0.9828, 0.5928, 0.2184);

    glBegin(GL_QUADS);
    glVertex2f(0.112 * x - 0.407, y*0.196-0.09);
    glVertex2f(0.112 * x - 0.407, y*0.196+0.106);
    glVertex2f(0.112 * x - 0.505, y * 0.196 + 0.106);
