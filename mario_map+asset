    glVertex2f(0.112 * x - 0.449, y * 0.196 + 0.057);
    glVertex2f(0.112 * x - 0.435, y * 0.196 + 0.057);
    glVertex2f(0.112 * x - 0.435, y * 0.196 + 0.008);

    glColor3f(0.78, 0.2964, 0.0468);
